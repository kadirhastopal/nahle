<% layout('layout') -%>

<section class="py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
            <!-- Tour Header -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
                <% if (tour.images && tour.images.length > 0) { %>
                    <img src="<%= tour.images[0].original %>" alt="<%= tour.title %>" class="w-full h-96 object-cover">
                <% } %>
                
                <div class="p-8">
                    <div class="flex items-center justify-between mb-4">
                        <span class="inline-block px-4 py-2 text-sm font-semibold text-white bg-green-600 rounded-full">
                            <%= tour.type === 'hac' ? 'Hac Turu' : 'Umre Turu' %>
                        </span>
                        <span class="text-3xl font-bold text-green-600">
                            <%= tour.currency === 'USD' ? '$' : '₺' %><%= tour.price %>
                        </span>
                    </div>
                    
                    <h1 class="text-3xl font-bold mb-4"><%= tour.title %></h1>
                    
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <p class="text-sm text-gray-500">Hareket</p>
                            <p class="font-semibold"><%= new Date(tour.departure_date).toLocaleDateString('tr-TR') %></p>
                        </div>
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <p class="text-sm text-gray-500">Dönüş</p>
                            <p class="font-semibold"><%= new Date(tour.return_date).toLocaleDateString('tr-TR') %></p>
                        </div>
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <p class="text-sm text-gray-500">Süre</p>
                            <p class="font-semibold"><%= tour.duration %></p>
                        </div>
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <p class="text-sm text-gray-500">Kontenjan</p>
                            <p class="font-semibold"><%= tour.available_quota %>/<%= tour.quota %></p>
                        </div>
                    </div>
                    
                    <div class="prose max-w-none mb-8">
                        <h3 class="text-xl font-semibold mb-3">Tur Açıklaması</h3>
                        <p class="text-gray-700 whitespace-pre-line"><%= tour.description %></p>
                    </div>
                    
                    <% if (tour.features && tour.features.length > 0) { %>
                        <div class="mb-8">
                            <h3 class="text-xl font-semibold mb-3">Özellikler</h3>
                            <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                                <% tour.features.forEach(feature => { %>
                                    <li class="flex items-center">
                                        <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                        <%= feature %>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>
                    
                    <% if (tour.includes && tour.includes.length > 0) { %>
                        <div class="mb-8">
                            <h3 class="text-xl font-semibold mb-3">Fiyata Dahil Olanlar</h3>
                            <ul class="space-y-2">
                                <% tour.includes.forEach(item => { %>
                                    <li class="flex items-start">
                                        <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                        <%= item %>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>
                    
                    <% if (tour.excludes && tour.excludes.length > 0) { %>
                        <div class="mb-8">
                            <h3 class="text-xl font-semibold mb-3">Fiyata Dahil Olmayanlar</h3>
                            <ul class="space-y-2">
                                <% tour.excludes.forEach(item => { %>
                                    <li class="flex items-start">
                                        <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                        </svg>
                                        <%= item %>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>
                    
                    <!-- CTA -->
                    <div class="bg-green-50 border-2 border-green-200 rounded-lg p-6 text-center">
                        <h3 class="text-xl font-semibold mb-3">Rezervasyon İçin İletişime Geçin</h3>
                        <p class="text-gray-700 mb-4">WhatsApp veya telefon ile bizimle iletişime geçebilirsiniz</p>
                        <div class="flex justify-center space-x-4">
                            <a href="https://wa.me/<%=settings.contact_whatsapp%>" target="_blank" 
                               class="bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700">
                                WhatsApp'tan Yaz
                            </a>
                            <a href="tel:+<%=settings.contact_whatsapp%>" 
                               class="bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-700">
                                Telefon Et
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
