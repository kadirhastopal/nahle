<% layout('layout') -%>

<article class="py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <% if (blog.image) { %>
                    <img src="<%= blog.image %>" alt="<%= blog.title %>" class="w-full h-96 object-cover">
                <% } %>
                
                <div class="p-8">
                    <!-- Meta Info -->
                    <div class="flex items-center text-sm text-gray-500 mb-6">
                        <span><%= blog.author %></span>
                        <span class="mx-2">•</span>
                        <span><%= new Date(blog.published_at).toLocaleDateString('tr-TR', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %></span>
                        <span class="mx-2">•</span>
                        <span><%= blog.views %> görüntülenme</span>
                        <% if (blog.category) { %>
                            <span class="mx-2">•</span>
                            <span class="text-green-600"><%= blog.category %></span>
                        <% } %>
                    </div>
                    
                    <!-- Title -->
                    <h1 class="text-3xl font-bold mb-6"><%= blog.title %></h1>
                    
                    <!-- Content -->
                    <div class="prose prose-lg max-w-none">
                        <%- blog.content.replace(/\n/g, '</p><p>').replace(/^/, '<p>').replace(/$/, '</p>') %>
                    </div>
                    
                    <!-- Tags -->
                    <% if (blog.tags && blog.tags.length > 0) { %>
                        <div class="mt-8 pt-6 border-t">
                            <div class="flex items-center flex-wrap gap-2">
                                <span class="text-sm font-semibold text-gray-600">Etiketler:</span>
                                <% blog.tags.forEach(tag => { %>
                                    <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                        #<%= tag %>
                                    </span>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Share Buttons -->
                    <div class="mt-8 pt-6 border-t">
                        <h3 class="text-lg font-semibold mb-4">Bu yazıyı paylaş</h3>
                        <div class="flex space-x-3">
                            <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent('http://localhost:3000/blog/' + blog.slug) %>" 
                               target="_blank" 
                               class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                                Facebook
                            </a>
                            <a href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent('http://localhost:3000/blog/' + blog.slug) %>&text=<%= encodeURIComponent(blog.title) %>" 
                               target="_blank" 
                               class="bg-sky-500 text-white px-4 py-2 rounded hover:bg-sky-600">
                                Twitter
                            </a>
                            <a href="https://wa.me/?text=<%= encodeURIComponent(blog.title + ' - http://localhost:3000/blog/' + blog.slug) %>" 
                               target="_blank" 
                               class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                WhatsApp
                            </a>
                        </div>
                    </div>
                    
                    <!-- Navigation -->
                    <div class="mt-8 pt-6 border-t">
                        <a href="/blog" class="inline-flex items-center text-green-600 hover:text-green-700">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Tüm Yazılara Dön
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Related Content CTA -->
            <div class="mt-8 bg-green-50 border-2 border-green-200 rounded-lg p-6 text-center">
                <h3 class="text-xl font-semibold mb-3">Hac ve Umre Turlarımız</h3>
                <p class="text-gray-700 mb-4">
                    Kutsal topraklara yapacağınız yolculuk için turlarımızı inceleyin
                </p>
                <div class="flex justify-center space-x-4">
                    <a href="/hac-turlari" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700">
                        Hac Turları
                    </a>
                    <a href="/umre-turlari" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700">
                        Umre Turları
                    </a>
                </div>
            </div>
        </div>
    </div>
</article>
