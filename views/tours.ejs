<% layout('layout') -%>

<section class="py-12">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold text-center mb-12"><%= title %></h1>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% if (tours && tours.length > 0) { %>
                <% tours.forEach(tour => { %>
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover-scale">
                        <% if (tour.images && tour.images[0]) { %>
                            <img src="<%= tour.images[0].thumbnail || tour.images[0].original %>" 
                                 alt="<%= tour.title %>" 
                                 class="w-full h-48 object-cover">
                        <% } else { %>
                            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                                <span class="text-gray-400">Görsel Yok</span>
                            </div>
                        <% } %>
                        
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2"><%= tour.title %></h3>
                            <p class="text-gray-600 mb-4">
                                <%= tour.description ? tour.description.substring(0, 100) + '...' : '' %>
                            </p>
                            
                            <div class="flex items-center justify-between mb-4">
                                <span class="text-sm text-gray-500">
                                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <%= new Date(tour.departure_date).toLocaleDateString('tr-TR') %>
                                </span>
                                <span class="text-sm text-gray-500">
                                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <%= tour.duration %>
                                </span>
                            </div>
                            
                            <div class="flex justify-between items-center">
                                <span class="text-2xl font-bold text-green-600">
                                    <%= tour.currency === 'USD' ? '$' : '₺' %><%= tour.price %>
                                </span>
                                <a href="/tur/<%= tour.slug %>" 
                                   class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                    Detaylar
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-3 text-center py-12">
                    <p class="text-gray-500 text-lg">Henüz <%= type === 'hac' ? 'hac' : 'umre' %> turu eklenmemiş.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>
